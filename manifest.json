{
  "manifest_version": 2,
  "name": "Send Torrent",
  "version": "1.2.0",

  "description": "Send a link to torrent server.",

  "permissions": ["menus", "storage", "http://*/", "https://*/"],

  "background": {
    "type": "module",
    "scripts": ["chrome/main.mjs"]
  },
  "content_scripts": [
    {
      "matches": ["http://*/*", "https://*/*"],
      "js": ["content/main.mjs"],
      "css": ["content/main.css"]
    }
  ],
  "options_ui": {
    "page": "pages/options.html",
    "browser_style": true
  }
}
